<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="itemDetailsHeading" parent="AppTheme" >
        <item name="android:textSize">@dimen/abc_text_size_display_1_material</item>
        <item name="android:background">#ff009688</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:paddingBottom">40dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="itemDetails" parent="AppTheme">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
    </style>

    <style name="itemDetailsSmall" parent="itemDetails" >
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
    </style>

</resources>
